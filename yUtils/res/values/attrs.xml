<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Dialog">
        <attr name="DialogTitleAppearance" format="reference" />
        <attr name="DialogTitleText" format="reference|string" />
        <attr name="DialogSpotColor" format="reference|color" />
        <attr name="DialogSpotCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="style" format="enum">
            <enum name="title" value="0" />
            <enum name="onlyText" value="1" />
            <enum name="onlyImg" value="2" />
            <enum name="onlyLeftText" value="3" />
            <enum name="onlyLeftImg" value="4" />
            <enum name="onlyLeft" value="5" />
        </attr>
        <attr name="background" format="color|reference" />
        <attr name="leftStr" format="reference|string" />
        <attr name="rightStr" format="reference|string" />
        <attr name="titleStr" format="reference|string" />
        <attr name="leftImg" format="reference" />
        <attr name="rightImg" format="reference" />
        <attr name="besideSize" format="dimension" />
        <attr name="titleSize" format="dimension" />
        <attr name="besideColor" format="reference|color" />
        <attr name="titleColor" format="reference|color" />
    </declare-styleable>
    
    <declare-styleable name="YImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
        　　         <enum name="ring" value="2" />
        </attr>
        <attr name="src" format="reference"></attr>
        <attr name="borderRadius" format="dimension" />
    </declare-styleable>
</resources>