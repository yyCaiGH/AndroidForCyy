        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_3_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_sz"
                android:textSize="@dimen/mytab_text_size"
                android:textColor="@color/sys_sub_color" />

            <TextView
                android:id="@+id/tv_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_sz"
                android:textSize="@dimen/mytab_text_size"
                android:textColor="@color/sys_main_color" />
        </FrameLayout>
    </LinearLayout>

