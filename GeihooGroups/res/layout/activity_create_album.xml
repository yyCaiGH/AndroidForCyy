<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_main_bg_color"
    android:orientation="vertical" >
    
    <include layout="@layout/view_common_top" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sys_default_margin_left_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/set_big_text_size"
      	android:text="相册名称："/>
    <EditText 
        android:gravity="top|left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/et_border_bg_black"
        android:padding="5dp"
        android:textSize="@dimen/set_big_text_size"
      	android:hint="输入相册名称"
      	/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sys_default_margin_left_size"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/set_big_text_size"
      	android:text="相册描述："/>
    <EditText 
        android:gravity="top|left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="3"
        android:background="@drawable/et_border_bg_black"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textSize="@dimen/set_big_text_size"
      	android:hint="说说这个相册的故事..."
      	/>
    </LinearLayout>
</LinearLayout>