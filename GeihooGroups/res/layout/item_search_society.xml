<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res/com.geihoo.groups"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" >

    <com.geihoo.view.CustomImageView
        android:id="@id/civ_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        zhy:src="@drawable/geihoo_logo"
        zhy:type="ring" />

    <TextView
        android:id="@+id/tv_society_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="瓜瓜也"
        android:gravity="center"
        android:textSize="@dimen/item_group_text_size"
        android:layout_marginTop="@dimen/item_grou_margin_top"/>

</LinearLayout>