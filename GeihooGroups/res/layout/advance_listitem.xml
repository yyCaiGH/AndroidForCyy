<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sys_main_bg_color"
    android:gravity="center_vertical"
    android:orientation="vertical"
     >

    <LinearLayout
        android:id="@+id/ll_publish_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_publish_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="15dp"
            android:text="11月11日"
            android:textColor="@color/sys_main_text_color"
            android:textSize="@dimen/set_big_text_size" />

        <View style="@style/dividing_view_fill" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/sys_default_text_padding_bottom_size"
        android:paddingTop="@dimen/sys_default_text_padding_top_size" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="83dp"
            android:layout_height="@dimen/activity_icon_size"
            android:src="@drawable/travel" />

        <LinearLayout
            android:id="@+id/ll_act_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:text="活动名称"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date"
                style="@style/activtiy_item_text_view"
                android:drawableLeft="@drawable/activity_date"
                android:text="活动时间" />

            <TextView
                android:id="@+id/place"
                style="@style/activtiy_item_text_view"
                android:drawableLeft="@drawable/activity_site"
                android:text="活动地点" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/organizer"
                    style="@style/activtiy_item_text_view"
                    android:drawableLeft="@drawable/activity_origer"
                    android:text="活动组织者" />

                <TextView
                    android:id="@+id/tv_num"
                    style="@style/activtiy_item_text_view"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/activity_num"
                    android:text="89人参加" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>