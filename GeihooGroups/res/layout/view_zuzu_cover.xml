<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res/com.geihoo.groups"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/society_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_zuzu_bg"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/blank" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <com.geihoo.view.CustomImageView
                android:id="@+id/civ_zuzu_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                zhy:src="@drawable/travel"
                zhy:type="ring" />

            <TextView
                android:id="@+id/tv_zz_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="旅游"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_zz_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="私密  | 10位成员"
                android:textColor="@color/sys_main_text_color"
                android:textSize="13dp" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/members_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_img"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:id="@+id/ll_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.geihoo.view.CustomImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                zhy:src="@drawable/def_man"
                zhy:type="circle" />

            <com.geihoo.view.CustomImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                zhy:src="@drawable/def_woman"
                zhy:type="circle" />

            <com.geihoo.view.CustomImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                zhy:src="@drawable/def_man"
                zhy:type="circle" />

            <com.geihoo.view.CustomImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                zhy:src="@drawable/def_woman"
                zhy:type="circle" />

            <com.geihoo.view.CustomImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                zhy:src="@drawable/def_man"
                zhy:type="circle" />

            <com.geihoo.view.CustomImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                zhy:src="@drawable/more_icon_2"
                zhy:type="circle" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_member_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/add_img" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btn_group_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/send_message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:textSize="15sp"
            android:drawableLeft="@drawable/post_message_icon"
            android:text="@string/post_message" />

        <TextView
            android:id="@+id/send_pic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:textSize="15sp"
            android:drawableLeft="@drawable/post_pic_icon"
            android:text="@string/post_pic" />
    </LinearLayout>

    <View style="@style/dividing_view_fill" />

    <TextView
        android:id="@+id/tv_stick_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/icon_drawdown_more"
        android:gravity="center"
        android:padding="@dimen/sys_default_padding_size_5"
        android:text="显示置顶帖" />

    <View style="@style/dividing_view_fill" />

</LinearLayout>