<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >
    <ImageView
     	android:id="@+id/iv_document_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/geihoo_logo" />
	<TextView 
	    android:id="@+id/tv_document_name"
	    android:layout_width="match_parent"
	    android:layout_marginRight="10dp"
	    android:layout_height="20dp"
	    android:gravity="center_vertical"
	    android:layout_alignTop="@+id/iv_document_id"
	    android:layout_toRightOf="@+id/iv_document_id"
	    android:textSize="12sp"
	    android:text="诚信专业代理注册记账纳税欢迎咨询.txt"/>
	<TextView 
	    android:id="@+id/tv_doucument_detail_id"
	    android:layout_width="wrap_content"
	    android:layout_height="15dp"
	    android:gravity="center_vertical"
	    android:layout_alignBottom="@+id/iv_document_id"
	    android:layout_alignLeft="@+id/tv_document_name"
	    android:textSize="12sp"
	    android:text="2.04MB  小魏  2015-8-31"/>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="15dp"
	    android:gravity="center_vertical"
	    android:layout_alignBottom="@+id/iv_document_id"
	    android:layout_alignRight="@+id/tv_document_name"
	    android:textSize="12sp"
	    android:text="下载"/>
</RelativeLayout>