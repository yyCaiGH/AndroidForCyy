                android:layout_height="wrap_content"
                android:text="@string/tab_zz"
                android:textSize="@dimen/mytab_text_size"
                android:textColor="@color/sys_main_color" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
