<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res/com.geihoo.groups"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <com.geihoo.view.CustomImageView
        android:id="@id/civ_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        zhy:src="@drawable/geihoo_logo"
        zhy:type="ring" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_mes_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/set_big_text_size"
            android:text="小李子" />

        <TextView
            android:id="@+id/tv_mes_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/set_big_text_size"
            android:textColor="@color/sys_sub_color"
            android:layout_marginTop="3dp"
            android:text="赞了我" />
    </LinearLayout>

</LinearLayout>