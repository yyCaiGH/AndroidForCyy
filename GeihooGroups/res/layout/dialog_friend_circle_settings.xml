<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/view_common_top" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sys_main_bg_color"
        android:scrollbars="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/set_text_margin_top"
            android:orientation="vertical" >
            <View style="@style/dividing_view_fill" />

            <TextView
                android:id="@+id/tv_settings_name"
                style="@style/fragment_more_text_style_2"
                android:text="编辑名称" />

            <View style="@style/dividing_view_fill" />

            <TextView
                android:id="@+id/tv_settings_background_photo"
                style="@style/fragment_more_text_style_2"
                android:text="@string/edit_society_background_photo" />

            <View style="@style/dividing_view_fill" />
 			
 			<TextView
                android:id="@+id/tv_settings_photo"
                style="@style/fragment_more_text_style_2"
                android:text="@string/edit_society_photo" />

            <View style="@style/dividing_view_fill" />
            
            <Button 
                android:id="@+id/btn_delete_fc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@color/sys_main_color"
                android:text="删除该朋友圈"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>