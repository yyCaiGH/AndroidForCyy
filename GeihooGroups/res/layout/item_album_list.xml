<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/sys_default_padding_size"
    android:paddingTop="@dimen/sys_default_padding_size" >

    <ImageView
        android:id="@+id/album_photo_iv_id"
        android:layout_width="@dimen/album_icon_size"
        android:layout_height="@dimen/album_icon_size"
        android:layout_marginRight="@dimen/sys_default_margin_size_10"
        android:background="@drawable/add_window" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/album_photo_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:text="我的相册1"
            android:textColor="@color/sys_main_text_color"
            android:textSize="@dimen/album_text_size" />

        <TextView
            android:id="@+id/album_photo_numinfo_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="20张照片"
            android:textColor="@color/sys_main_text_color"
            android:textSize="@dimen/album_small_text_size" />
    </LinearLayout>

</LinearLayout>