<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_main_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/createnewalbum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sys_default_margin_left_size"
        android:layout_marginRight="@dimen/sys_default_margin_right_size"
        android:layout_marginTop="@dimen/sys_default_margin_size_10"
        android:layout_marginBottom="@dimen/sys_default_margin_size_10"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/album_icon_size"
            android:layout_height="@dimen/album_icon_size"
            android:layout_marginRight="@dimen/sys_default_margin_size_10"
            android:background="@drawable/add_window" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/sys_main_text_color"
            android:textSize="@dimen/album_text_size"
            android:text="@string/createnewalbum" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/sys_default_margin_left_size"
        android:layout_marginRight="@dimen/sys_default_margin_right_size"
        android:background="@color/dividing_line_color" />

    <ListView
        android:id="@+id/album_list_id"
        android:layout_marginLeft="@dimen/sys_default_margin_left_size"
        android:layout_marginRight="@dimen/sys_default_margin_right_size"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
         >
    </ListView>

</LinearLayout>