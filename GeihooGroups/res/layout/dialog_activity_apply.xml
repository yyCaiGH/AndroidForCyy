<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/view_common_top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/et_border_bg"
        android:hint="请输入手机号"
        android:padding="5dp"
        android:textSize="@dimen/sys_small_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="仅组织者可见"
        android:textColor="@color/sys_sub_color"
        android:textSize="@dimen/sys_small_text_size" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/et_border_bg"
        android:hint="我的想法（30个字以内）"
        android:lines="4"
        android:gravity="left"
        android:padding="3dp"
        android:textSize="@dimen/sys_small_text_size" />
    
    <TextView
        android:id="@+id/tv_act_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sys_main_color"
        android:gravity="center"
        android:padding="@dimen/sys_default_padding_size"
        android:textColor="@android:color/white"
        android:text="确认报名" />

</LinearLayout>