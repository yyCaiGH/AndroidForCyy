<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res/com.geihoo.groups"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <com.geihoo.view.CustomImageView
        android:id="@id/civ_image"
        android:layout_width="@dimen/icon_small_size"
        android:layout_height="@dimen/icon_small_size"
        android:layout_marginTop="@dimen/zuzu_list_margin_top_bottom"
        android:layout_marginBottom="@dimen/zuzu_list_margin_top_bottom"
        android:layout_marginLeft="@dimen/sys_default_margin_left_size"
        android:layout_marginRight="@dimen/zuzu_list_margin_right"
        zhy:src="@drawable/geihoo_logo"
        zhy:type="circle" />

    <TextView
        android:id="@+id/tv_zz_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="瓜瓜也"
        android:gravity="center_vertical"
        android:textColor="@color/sys_main_text_color"
        android:textSize="@dimen/set_big_text_size" />


</LinearLayout>