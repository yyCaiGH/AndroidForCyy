<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <include layout="@layout/view_common_top" />

        <ImageView
            android:id="@+id/iv_act_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_add_photo" />

        <View
            style="@style/dividing_view_fill"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dividing_ling_margin_left"
            android:layout_marginRight="@dimen/dividing_ling_margin_right"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="活动名称"
            android:padding="3dp"
            android:textSize="@dimen/activity_main_text_size" />

        <View style="@style/dividing_view" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:ems="10"
            android:gravity="left"
            android:hint="活动介绍"
            android:lines="4"
            android:padding="3dp"
            android:textSize="@dimen/activity_main_text_size" >
        </EditText>

        <View style="@style/dividing_view_fill" />

        <View
            style="@style/dividing_view_fill"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/icon_time" />

                <TextView
                    android:id="@+id/tv_act_start_date_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报名开始时间："
                    android:textSize="@dimen/activity_main_text_size" />

                <TextView
                    android:id="@+id/tv_act_start_data_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:text="2015-12-12 23:25:30"
                    android:textColor="@color/sys_sub_color"
                    android:textSize="@dimen/activity_main_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/icon_time"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_act_end_date_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报名结束时间："
                    android:textSize="@dimen/activity_main_text_size" />

                <TextView
                    android:id="@+id/tv_act_end_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:text="2015-12-18 23:25:30"
                    android:textColor="@color/sys_sub_color"
                    android:textSize="@dimen/activity_main_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/icon_time" />

                <TextView
                    android:id="@+id/tv_act_start_date_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动开始时间："
                    android:textSize="@dimen/activity_main_text_size" />

                <TextView
                    android:id="@+id/tv_act_start_data_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:text="2015-12-12 23:25:30"
                    android:textColor="@color/sys_sub_color"
                    android:textSize="@dimen/activity_main_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/icon_time"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_act_end_date_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动结束时间："
                    android:textSize="@dimen/activity_main_text_size" />

                <TextView
                    android:id="@+id/tv_act_end_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="8"
                    android:text="2015-12-18 23:25:30"
                    android:textColor="@color/sys_sub_color"
                    android:textSize="@dimen/activity_main_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/icon_site" />

            <TextView
                android:id="@+id/tv_act_place_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableRight="@drawable/list_chevron"
                android:gravity="center_vertical"
                android:hint="活动地点"
                android:textSize="@dimen/activity_main_text_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>