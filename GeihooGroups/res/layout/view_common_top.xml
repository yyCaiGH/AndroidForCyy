<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sys_main_color"
     >

    <TextView
        android:id="@+id/tv_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:drawableLeft="@drawable/top_back_image"
        android:drawablePadding="1dp"
        android:layout_centerVertical="true"
        android:text="返回"
        android:gravity="center"
        android:padding="@dimen/common_top_padding_size"
        android:layout_marginLeft="2dp"
        />
	
    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sys_main_text_size"
        android:padding="@dimen/common_top_padding_size"
        android:text="@string/top_title" />

    <TextView
        android:id="@+id/tv_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="@dimen/common_top_padding_size"
        />

</RelativeLayout>
