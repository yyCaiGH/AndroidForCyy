<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res/com.geihoo.groups"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.geihoo.view.CustomImageView
        android:id="@id/civ_image"
        android:layout_width="@dimen/contacts_icon_size"
        android:layout_height="@dimen/contacts_icon_size"
         android:layout_marginTop="@dimen/contact_list_margin_top_bottom_for_search"
        android:layout_marginBottom="@dimen/contact_list_margin_top_bottom_for_search"
        android:layout_marginLeft="@dimen/sys_default_margin_left_size"
        android:layout_marginRight="@dimen/contact_list_margin_right"
        zhy:src="@drawable/geihoo_logo"
        zhy:type="circle" />

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="瓜瓜也"
        android:gravity="center_vertical"
        android:textSize="@dimen/contacts_name_text_size" />

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/sys_default_padding_right_size"
        />

</LinearLayout>