                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_sz"
                android:textSize="@dimen/mytab_text_size"
                android:textColor="@color/sys_main_color" />
        </FrameLayout>
    </LinearLayout>    
    
</LinearLayout>