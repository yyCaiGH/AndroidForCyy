<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res/com.geihoo.groups"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/view_common_top"/>
    <TextView
        style="@style/set_title_text_view"
        android:layout_marginTop="10dp"
        android:text="常用族族" />

    <View style="@style/dividing_view" />

    <com.geihoo.view.dslv.DragSortListView
        android:id="@+id/dslvList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:dividerHeight="1px"
        android:padding="3dp"
        dslv:click_remove_id="@+id/click_remove"
        dslv:collapsed_height="1px"
        dslv:drag_enabled="true"
        dslv:drag_handle_id="@+id/drag_handle"
        dslv:drag_scroll_start="0.33"
        dslv:drag_start_mode="onDown"
        dslv:float_alpha="0.6"
        dslv:remove_enabled="true"
        dslv:remove_mode="clickRemove"
        dslv:slide_shuffle_speed="0.3" />

    <TextView
        style="@style/set_title_text_view"
        android:layout_marginTop="10dp"
        android:text="字母顺序" />

    <View style="@style/dividing_view" />
    
    <com.geihoo.view.dslv.DragSortListView
        android:id="@+id/dslvList_all"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:dividerHeight="1px"
        android:padding="3dp"
        dslv:click_remove_id="@+id/click_remove"
        dslv:collapsed_height="1px"
        dslv:drag_enabled="true"
        dslv:drag_handle_id="@+id/drag_handle"
        dslv:drag_scroll_start="0.33"
        dslv:drag_start_mode="onDown"
        dslv:float_alpha="0.6"
        dslv:remove_enabled="true"
        dslv:remove_mode="clickRemove"
        dslv:slide_shuffle_speed="0.3" />
</LinearLayout>